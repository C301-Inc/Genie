{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": "./src",
    "lib": ["ES2015", "ES2017", "dom"]
  }
}
